{
    "settings": {
    	"number_of_shards": 1,
        "number_of_replicas": 0,
        "analysis": {
            "filter": {
                "stemmer": {
                    "type": "stemmer",
                    "language": "english"
                },
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_shingle_size": 1,
                    "max_shingle_size": 20
                },
                "stopwords": {
                    "type": "stop",
                    "stopwords": ["_english_"]
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                },
                "didYouMean": {
                    "filter": ["lowercase"],
                    "char_filter": ["html_strip"],
                    "type": "custom",
                    "tokenizer": "standard"
                },
                "default": {
                    "filter": [
                        "lowercase",
                        "stopwords",
                        "stemmer"
                    ],
                    "char_filter": ["html_strip"],
                    "type": "custom",
                    "tokenizer": "standard"
                }
            }
        }
    },
    "mappings": {
        "category": {
            "properties": {
                "cat_name": {
                    "type": "text",
                    "analyzer": "english",
                    "fields": {
                        "std": {
                            "type": "text",
                            "analyzer": "standard"
                        }
                    }
                }
            }
        },
        "platform": {
	        "properties": {
	            "autocomplete": {
	                "type": "text",
	                "analyzer": "autocomplete"
	            },
	            "description": {
	                "type": "text",
	                "copy_to":[
	                    "did_you_mean",
	                    "autocomplete"
	                ]
	            },
	            "did_you_mean": {
	                "type": "text",
	                "analyzer": "didYouMean"
	            },
                "attributes": {
                    "type": "nested",
                    "properties": {
                        "process": {
                            "properties": {
                                "preselection_of_contributors": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "peer_contributions_accessibility": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "aggregation_of_contributions": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "remuneration_for_contributions": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "form_of_remuneration": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                }
                            }
                        },
                        "goals": {
                            "properties": {
                                "main_beneficiary": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "value_type": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "input_tolerance": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                }
                            }
                        },
                        "task": {
                            "properties": {
                                "type": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "dependencies": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "novelty": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "effectiveness": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                }
                            }
                        },
                        "crowd": {
                            "properties": {
                                "contribution_type": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                },
                                "main_motivational_driver": {
                                    "type": "text",
                                    "fields": {
                                        "keyword": {
                                            "type": "keyword"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
	        }
	    }
    }
}